#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargar_vector (double a[],int tamano);
double calcular_mayor (double a[], int tamano);
void mostrar_datos (double a[], int tamano);

void main()
{
  double a[MAX], res;
  int i,n;
  do
  {
	  cout<<"ingrese el numero de elementos:";
	  cin>>n;
  }
  while (!(n>0 && n<MAX));
  cargar_vector (a,n);
  res = calcular_mayor (a,n);
  mostrar_datos (a,n);
  cout<<"el numero mayor es:";
  cout<<res;
  getch();
}

void cargar_vector (double a[], int tamano)
{
	for (int i=0; i<tamano; i++)
	{
		cout<<"a["<<i<<"]=";
		cin>>a[i];
	}
}

void mostrar_datos (double a[], int tamano)
{
	for (int i=0; i<tamano; i++)
	{
		cout<<"a["<<i<<"]=";
		cout<<a[i];
	}
}

double calcular_mayor (double a[], int tamano)
{ 
	int aux=a[0];
	for (int i=0; i<tamano; i++)
	{
		if (a[i]>aux)
		{
			aux=a[i];
		}
	}
	return aux;
}
