void mostrar_datos(double a[], int tamanio){
  for (int i=0; i<tamanio; i++){
    cout<<"a["<<i<<"]="<<endl;
    cout<< a[i];}
}
double calcular_promedio(double a[], int tamanio){
  double suma=0, prom;
  for (int b=0; b<tamanio; b++){
    suma=suma+a[b];]
  prom=suma/tamanio;
  return prom;
}
